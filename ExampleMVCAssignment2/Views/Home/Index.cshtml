@model IEnumerable<ExampleMVCAssignment2.Models.Student>
@{
    ViewBag.Title = "Student List";
    

}


<div class="card-deck">
    @foreach (var student in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/Student.png" />
            <div class="card-footer text-center">
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details"
                       asp-route-id="@student.StudentId" class="btn btn-primary m-1">View</a>

                    <a asp-controller="home" asp-action="edit"
                       asp-route-id="@student.StudentId" class="btn btn-primary m-1">Edit</a>
                    <a asp-controller="home" asp-action="delete" 
                        asp-route-id="@student.StudentId" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
   