@model ExampleMVCAssignment2.Models.Student 
@{
    ViewData["Title"] = "Create";
    
}

<form method="post" class="mt-3" style="margin-left:70px;">


    <div class="form-group row">

        <label asp-for="Name" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="@Model.Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">

        <label asp-for="Email" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="@Model.Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Branch" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-7">
            <select asp-for="@Model.Branch" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Branch>()">

                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Gender"></span>

        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-7">
            <select asp-for="@Model.Gender" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Gender>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Gender"></span>

        </div>

    </div>
    <div class="form-group row">

        <label asp-for="Address" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-7">
            <textarea asp-for="@Model.Address" class="form-control" placeholder="Address"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">

        <div class="col-sm-10">
            <button type="submit" asp-page-handler="Submit" class="btn btn-primary">Create</button>

        </div>

    </div>
   
</form>




